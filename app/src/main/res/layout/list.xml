<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:orientation="vertical">

    <android.support.v7.widget.CardView
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        app:cardElevation="4dp">

        <LinearLayout
            a:layout_width="match_parent"
            a:layout_height="match_parent"
            a:orientation="horizontal"
            a:padding="10dp">

            <LinearLayout
                a:layout_width="match_parent"
                a:layout_height="match_parent"
                a:layout_weight="2.3"
                a:orientation="vertical"
                a:padding="10dp">
                    <TextView
                        a:layout_width="match_parent"
                        a:layout_height="wrap_content"
                        a:text="Nama"
                        a:textSize="17sp"
                        a:textStyle="bold"
                        a:textColor="@color/black"
                        a:paddingTop="10dp"/>
                    <TextView
                        a:layout_width="match_parent"
                        a:layout_height="wrap_content"
                        a:layout_gravity="left"
                        a:text="Email"
                        a:textColor="@color/black"
                        a:textSize="17sp"
                        a:textStyle="bold"
                        a:paddingTop="20dp"/>
                    <TextView
                        a:layout_width="match_parent"
                        a:layout_height="wrap_content"
                        a:text="Password"
                        a:textColor="@color/black"
                        a:paddingTop="20dp"
                        a:textSize="17sp"
                        a:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                a:layout_width="match_parent"
                a:layout_height="match_parent"
                a:layout_weight="1"
                a:orientation="vertical"
                a:padding="10dp">

                <EditText
                    a:id="@+id/edtnamaL"
                    a:textSize="17sp"
                    a:layout_width="match_parent"
                    a:layout_height="wrap_content"
                    a:layout_gravity="center">
                </EditText>

                <EditText
                    a:id="@+id/edtemailL"
                    a:textSize="17sp"
                    a:layout_width="match_parent"
                    a:layout_height="wrap_content"
                    a:layout_gravity="center"
                    a:inputType="textEmailAddress">
                </EditText>

                <EditText
                    a:id="@+id/edtpasswordL"
                    a:textSize="17sp"
                    a:layout_width="match_parent"
                    a:layout_height="wrap_content"
                    a:layout_gravity="center"
                    a:inputType="textPassword">
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>